FROM ruby
RUN gem install json thin sinatra

ARG api

ARG homedir=/home/${api}
ARG user=${api}
ARG group=${api}
ARG uid=1000
ARG gid=1000
RUN groupadd -g ${gid} ${group} && useradd -d ${homedir} -u ${uid} -g ${gid} -m -s /bin/bash ${user}

COPY ./app.rb ${homedir}/app.rb

USER ${user}

ENTRYPOINT ruby /home/locationapi/app.rb

EXPOSE 8080/tcp
